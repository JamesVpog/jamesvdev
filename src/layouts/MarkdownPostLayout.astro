---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props; //grabs the frontmatter from md file
const tags = frontmatter.tags;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="metadata">
    <p>by {frontmatter.author} / {frontmatter.date.toString().slice(0, 10)}</p>
    <p><em>{frontmatter.description} </em></p>
    <div class="tags">
      {
        tags.map((tag: string) => (
          <p class="tag">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
        ))
      }
    </div>
  </div>
  <slot />
</BaseLayout>
<style>
  /* fix ai generated css*/
  .metadata {
    margin-bottom: 3rem; /* space below metadata before content */
    padding-bottom: 2rem;
  }

  .metadata p {
    margin-bottom: 0.5rem;
    color: #888;
  }

  .metadata em {
    font-size: 1.1rem;
  }

  .tags {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
  }

  .tag a {
    color: #888;
    text-decoration: none;
  }

  p {
    line-height: 1.7em;
    margin-bottom: 1.5rem;
  }
  .tags {
    margin-top: 1rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tag a {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #2a2a2a; /* slightly lighter than background */
    border-radius: 4px;
    color: #aaa;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s;
  }

  .tag a:hover {
    background: #3a3a3a;
    color: #fff;
  }
  :global(img) {
    max-width: 100%;
    max-height: 500px; /* limits the height */
    width: auto;
    height: auto;
    object-fit: contain; /* keeps aspect ratio */
    display: block;
    margin: 2rem auto;
  }
</style>
