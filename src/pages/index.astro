---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "James Vongphasouk";
const jobLocation = "Intermountain Health";
import { Image } from "astro:assets";
import profileImage from "../../assets/profile.jpeg";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="container">
    <Image
      src={profileImage}
      alt="Profile of James Vongphasouk"
      layout="constrained"
      width={150}
      height={150}
    />
    <ul>
      <li>Software Engineer who tackles difficult problems</li>
      <li>
        @ {jobLocation} building backend services for healthcare data
      </li>
      <li>
        Completed my MS in Computer Science from the Colorado School of Mines in
        2024
      </li>
      <li>Outside of software, I watch/play League of Legends and chess</li>
    </ul>
  </div>
  <style>
    .container {
      display: flex;
      gap: 1rem; /* Space between image and ul */
    }
    .container > img {
      padding: 5px;
    }
    .container > ul {
      min-width: 0;
      flex: 1;
      overflow-wrap: break-word;
    }
    li {
      margin: 10px 0px;
    }
  </style>
</BaseLayout>
